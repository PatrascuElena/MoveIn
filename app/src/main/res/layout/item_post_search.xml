<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">


        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:paddingStart="16dp"
            android:text="Titlul Postarii"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:padding="0dp">

            <TextView
                android:id="@+id/postdescr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="16dp"
                android:text="Descriere"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/postoras"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="16dp"
                android:text="Oras"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/postsupraf"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="16dp"
                android:text="Suprafata"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/postadresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="16dp"
                android:text="Adresa"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/postpret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="16dp"
                android:text="Pret"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />
            <Button
                android:layout_width="match_parent"
                android:id="@+id/callbutton"
                android:layout_below="@id/postpret"
                android:layout_marginTop="20dp"
                android:autoLink="phone"
                android:text="Numar de telefon"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="#40000000" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
